<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="card show-card offset-1 offset-lg-2">
        <h2>
            <%=event.title%>
        </h2>
        <img src="<%=event.image%>" class="card-img-top img">
        <p><i>Organized by </i><b><%=event.owner.username%></b></p>
        <div class="card-body">
            <p class="card-text">
               <b><i>Description : </i></b><%=event.description%>
            </p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <b><i>Price : </i></b><%=event.price%>
            </li>
            <li class="list-group-item">
                <b><i>Venue : </i></b><%=event.venue%>
            </li>
            <li class="list-group-item">
                <b><i>Date : </i></b><%=event.date%>
            </li>
            <li class="list-group-item">
                <b><i>Capacity : </i></b><%=event.capacity%>
            </li>
        </ul>
        <% if(user && user._id.equals(event.owner._id)) {%>
            <div class="card-body">
                <form action="/events/<%=event._id%>/edit" method="get">
                     <button class="card-link btn btn-primary">Edit</button>
                </form>
                <form action="/events/<%=event._id%>?_method=DELETE" method="post">
                      <button class="card-link btn btn-danger">Delete</button>
                </form>
            </div>
        <% } %>
        <% if(user) { %>
            <% if(!user._id.equals(event.owner._id)) {%>
            <div>
               <a href="/events/bookings/<%=event._id%>/<%=user._id%>" class="btn btn-warning">Book Event</a>
            </div>
        <% } %>
        <% } %>
    </div>
</body>
